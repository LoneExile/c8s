package components

import (
	"k8s.io/api/core/v1"
	"strconv"
)

func readyContainers(pod *v1.Pod) int {
	count := 0
	for _, container := range pod.Status.ContainerStatuses {
		if container.Ready {
			count++
		}
	}
	return count
}

